<script>
    function validateForm() {
        document.getElementById('error-message').innerText = '';

        const name = document.getElementById('name').value;
        const number = document.getElementById('number').value;
        const house = document.getElementById('house').value;
        const street = document.getElementById('street').value;
        const city = document.getElementById('city').value;
        const state = document.getElementById('state').value;
        const country = document.getElementById('country').value;
        const pincode = document.getElementById('pincode').value;

        if (!name.trim()) {
            displayError('Full Name is required');
            return false;
        }

        if (!number.match(/^\d{10}$/)) {
            displayError('Phone number must be 10 digits');
            return false;
        }

        if (!house.trim()) {
            displayError('House No., Building Name is required');
            return false;
        }

        if (!street.trim()) {
            displayError('Street name, Area, Colony is required');
            return false;
        }

        if (!city.trim()) {
            displayError('City is required');
            return false;
        }

        if (!state.trim()) {
            displayError('State is required');
            return false;
        }

        if (country === '1') {
            displayError('Please select a country');
            alert('Please select a country'); 
            return false;
        }

        if (!pincode.match(/^\d{6}$/)) {
            displayError('Pincode must be 6 digits');
            return false;
        }

        return true;
    }

    function displayError(message) {
        document.getElementById('error-message').innerText = message;
    }
</script>
