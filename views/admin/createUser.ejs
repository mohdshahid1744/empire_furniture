<%- include('../partials/head'); -%>
    <div class="wrapper">
        <div class="title-text">
          <div class="title create">Create User</div>
        </div>
        <div class="form-container">
          <div class="slide-controls">
            <input type="radio" name="slide" id="create">
            <label for="create" class="slide create">Create</label>
            <div class="slider-tab"></div>
          </div>
          <div class="form-inner">

            <form action="/admin/createUser" class="create" method="post">
              <div class="field">
                <input type="text" name="name" placeholder="Name" required>
              </div>
              <div class="field">
                <input type="email" name="email" placeholder="E-mail" required>
              </div>
              <div class="field">
                <input type="number" name="mno" placeholder="Mobile Number" required>
              </div>

              <div class="field">
                <input type="password" name="password" placeholder="Password" required>
              </div>
              <div class="field btn">
                <div class="btn-layer" style="margin-top: -6px;" ></div>
                <input type="submit" value="Create">
              </div>
              <a href="/admin/dashboad" class="btn btn-md btn-block btn-danger"
                        ><i class="fab fa-google me-1"></i>Go Back</a>
            </form>
            
          
          </div>
        </div>
        <% if (typeof message !== 'undefined') { %>
          <p style="color: green;"><%= message %></p>
      <% } %>
      </div>
      <%- include( '../partials/footer') %>